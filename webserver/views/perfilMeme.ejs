<!doctype html>
<html>
<head>
    <% include components/projectDefaultHead/projectDefaultHead %>
    <title>meme.io - Perfil do Meme></title>
</head>
<body>
<% if (usuario) { %>
    <% include components/headerUsuario/headerUsuario.ejs %>
<% }else{ %>
    <% include components/headerVisitante/headerVisitante.ejs %>
<% } %>

<main>
    <div class="container">
        <div id="memeCard" class="border-memeProfile rounded">
            <div class="row">
                <div class="col-sm-2">
                    <img src="<%= meme.urlImgur%>">
                </div>
                <div class="col-sm-9">
                <div class="row">
                    <h1><a href="<%= meme.urlImgur%>">Link do Imgur</a></h1>
                </div>
                <div class="row">
                    <h3>Categorias:
                        <% meme.categorias.forEach(categoria => { %>
                            <%= categoria %>
                        <% }) %>
                </h3>
                </div>
                <div class="row">
                    <h3>Adicionado em:
                        <%= meme.data %>
                    </h3>
                </div>
            </div>
                <div class="col-sm-1" style="padding-right: 0px; padding-left: 0px; height: 100%;">
                     <% if (usuario) { %>
                        <% if (usuario.memesSeguidos.includes(meme._id)) { %>
                                <button onclick="seguirMeme('<%= meme._id %>', '<%= usuario._id %>', this)" class="btn btn-memeIO">Seguindo</button>
                        <% } else { %>
                                <button onclick="seguirMeme('<%= meme._id %>', '<%= usuario._id %>', this)" class="btn btn-memeIO">Seguir</button>
                        <% } %>
                    <% } %>
                </div>
        </div>
        </div>
        <div id="" class="feed">
            <% include components/feed/feed.ejs %>
        </div>
    </div>
</main>

<% include components/footer/projectDefaultFooter.ejs %>
<% include components/projectDefaultScripts/projectDefaultScripts.ejs %>
</body>
</html>